<h1>Selected cocktail</h1>
<ul>
<%= @cocktail.name %>
<h2>Doses:</h2>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "delete", dose_path(dose), method: :delete  %></li>
<% end %>
</ul>

<%= link_to "add doses", new_cocktail_dose_path(@cocktail) %>
<%= link_to "back", cocktails_path %>
